# IM 生产环境 Docker Compose
# 使用 Kafka KRaft 模式（无需 ZooKeeper）
# 针对小内存服务器优化

services:
  # ==================== 基础设施 ====================
  mysql:
    image: mysql:8.0
    container_name: im_mysql
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: im_db
    command: 
      - --default-authentication-plugin=mysql_native_password
      - --character-set-server=utf8mb4
      - --collation-server=utf8mb4_unicode_ci
      - --innodb-buffer-pool-size=256M
      - --max-connections=200
      - --key-buffer-size=32M
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./sql/schema.sql:/docker-entrypoint-initdb.d/schema.sql:ro
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p${MYSQL_ROOT_PASSWORD}"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s
    deploy:
      resources:
        limits:
          memory: 512M
    networks:
      - im_network

  redis:
    image: redis:7.2-alpine
    container_name: im_redis
    restart: unless-stopped
    command: 
      - redis-server
      - --save 300 1
      - --appendonly yes
      - --requirepass ${REDIS_PASSWORD}
      - --maxmemory 256mb
      - --maxmemory-policy allkeys-lru
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "${REDIS_PASSWORD}", "ping"]
      interval: 30s
      timeout: 10s
      retries: 5
    deploy:
      resources:
        limits:
          memory: 300M
    networks:
      - im_network

  # Kafka KRaft 模式（无需 ZooKeeper，节省 ~300MB 内存）
  kafka:
    image: bitnami/kafka:3.6
    container_name: im_kafka
    restart: unless-stopped
    environment:
      - KAFKA_CFG_NODE_ID=0
      - KAFKA_CFG_PROCESS_ROLES=broker,controller
      - KAFKA_CFG_CONTROLLER_QUORUM_VOTERS=0@kafka:9093
      - KAFKA_CFG_LISTENERS=PLAINTEXT://:9092,CONTROLLER://:9093
      - KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
      - KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT
      - KAFKA_CFG_CONTROLLER_LISTENER_NAMES=CONTROLLER
      - KAFKA_CFG_AUTO_CREATE_TOPICS_ENABLE=true
      - KAFKA_CFG_OFFSETS_TOPIC_REPLICATION_FACTOR=1
      - KAFKA_HEAP_OPTS=-Xmx512m -Xms512m
      - ALLOW_PLAINTEXT_LISTENER=yes
    volumes:
      - kafka_data:/bitnami/kafka
    healthcheck:
      test: ["CMD-SHELL", "kafka-broker-api-versions.sh --bootstrap-server localhost:9092 || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s
    deploy:
      resources:
        limits:
          memory: 600M
    networks:
      - im_network

  minio:
    image: minio/minio:latest
    container_name: im_minio
    restart: unless-stopped
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
    command: server /data --console-address ":9001"
    ports:
      - "9000:9000"
      - "9001:9001"
    volumes:
      - minio_data:/data
    healthcheck:
      test: ["CMD", "mc", "ready", "local"]
      interval: 30s
      timeout: 10s
      retries: 3
    deploy:
      resources:
        limits:
          memory: 256M
    networks:
      - im_network

  # ==================== 微服务 ====================
  identity-service:
    image: ghcr.io/${GITHUB_REPO}/identity_service:latest
    container_name: im_identity
    restart: unless-stopped
    environment:
      - APP_ENV=prod
      - JWT_SECRET=${JWT_SECRET}
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_USER=root
      - DB_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - DB_NAME=im_db
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_PASSWORD=${REDIS_PASSWORD}
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 128M
    networks:
      - im_network

  conversation-service:
    image: ghcr.io/${GITHUB_REPO}/conversation_service:latest
    container_name: im_conversation
    restart: unless-stopped
    environment:
      - APP_ENV=prod
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_USER=root
      - DB_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - DB_NAME=im_db
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_PASSWORD=${REDIS_PASSWORD}
    depends_on:
      mysql:
        condition: service_healthy
      redis:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 128M
    networks:
      - im_network

  message-service:
    image: ghcr.io/${GITHUB_REPO}/message_service:latest
    container_name: im_message
    restart: unless-stopped
    environment:
      - APP_ENV=prod
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_USER=root
      - DB_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - DB_NAME=im_db
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_PASSWORD=${REDIS_PASSWORD}
      - KAFKA_BROKERS=kafka:9092
    depends_on:
      mysql:
        condition: service_healthy
      kafka:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 128M
    networks:
      - im_network

  delivery-service:
    image: ghcr.io/${GITHUB_REPO}/delivery_service:latest
    container_name: im_delivery
    restart: unless-stopped
    environment:
      - APP_ENV=prod
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_PASSWORD=${REDIS_PASSWORD}
      - KAFKA_BROKERS=kafka:9092
      - KAFKA_GROUP_ID=delivery-group
    depends_on:
      redis:
        condition: service_healthy
      kafka:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 128M
    networks:
      - im_network

  presence-service:
    image: ghcr.io/${GITHUB_REPO}/presence_service:latest
    container_name: im_presence
    restart: unless-stopped
    environment:
      - APP_ENV=prod
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_PASSWORD=${REDIS_PASSWORD}
    depends_on:
      redis:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 96M
    networks:
      - im_network

  file-service:
    image: ghcr.io/${GITHUB_REPO}/file_service:latest
    container_name: im_file
    restart: unless-stopped
    environment:
      - APP_ENV=prod
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_USER=root
      - DB_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - DB_NAME=im_db
      - MINIO_ENDPOINT=minio:9000
      - MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
      - MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
      - MINIO_USE_SSL=false
    depends_on:
      mysql:
        condition: service_healthy
      minio:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 96M
    networks:
      - im_network

  api-gateway:
    image: ghcr.io/${GITHUB_REPO}/api_gateway:latest
    container_name: im_gateway
    restart: unless-stopped
    environment:
      - APP_ENV=prod
      - JWT_SECRET=${JWT_SECRET}
      - IDENTITY_SERVICE_ADDR=identity-service:9080
      - CONVERSATION_SERVICE_ADDR=conversation-service:9081
      - MESSAGE_SERVICE_ADDR=message-service:9082
      - DELIVERY_SERVICE_ADDR=delivery-service:8083
      - PRESENCE_SERVICE_ADDR=presence-service:9084
      - FILE_SERVICE_ADDR=file-service:9085
    ports:
      - "80:8080"
      - "8083:8083"
    depends_on:
      - identity-service
      - conversation-service
      - message-service
      - delivery-service
      - presence-service
      - file-service
    deploy:
      resources:
        limits:
          memory: 128M
    networks:
      - im_network

volumes:
  mysql_data:
  redis_data:
  kafka_data:
  minio_data:

networks:
  im_network:
    driver: bridge
