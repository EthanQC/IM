# Conversation Service 本地开发环境配置示例
# 复制此文件为 config.dev.yaml 并根据需要修改

server:
  http_port: 8082
  grpc_port: 9081
  mode: debug

mysql:
  dsn: "root:your_password@tcp(localhost:3306)/im_db?charset=utf8mb4&parseTime=True&loc=Local"
  max_idle_conns: 10
  max_open_conns: 100

redis:
  addr: "localhost:6379"
  password: ""
  db: 0

log:
  service: "conversation-service"
  level: debug
  encoding: console
  stdout: true
