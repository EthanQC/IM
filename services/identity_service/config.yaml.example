# Identity Service Configuration Example
# 复制此文件为 config.yaml 并填入真实配置

server:
  http_port: 8080
  grpc_port: 9090
  mode: debug # debug, release

mysql:
  host: 127.0.0.1
  port: 3306
  user: root
  password: your_password_here
  database: identity_service
  max_open_conns: 100
  max_idle_conns: 10

redis:
  addr: "127.0.0.1:6379"
  password: ""
  db: 0

jwt:
  secret: "your-secret-key-at-least-32-characters-long-please-change-this"
  access_ttl: 15m      # Access Token 有效期
  refresh_ttl: 168h    # Refresh Token 有效期 (7天)

verification:
  code_ttl: 5m         # 验证码有效期
  max_attempts: 3      # 最大验证次数

email:
  smtp_host: smtp.example.com
  smtp_port: 587
  username: your_email@example.com
  password: your_email_password
  from_address: your_email@example.com
  from_name: IM Service
